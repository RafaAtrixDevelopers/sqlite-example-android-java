<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.atrixdevelopers.rafael.example.java.sqlite.ui.activity.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_contato"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/txt_author"
        tools:listitem="@layout/card_contato"/>

    <TextView
        android:id="@+id/txt_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/author_credits"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:background="?attr/colorPrimary"/>
</RelativeLayout>
